{
    "compilerOptions": {
      "target": "es2021",
      "lib": ["es2021", "dom"],
      "module": "commonjs",
  
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "typeRoots": ["./@types", "node_modules/@types"]
    },
    "typedocOptions": {
      "entryPoints": [
        "src/lib/*.ts"
      ],
      "out": "dist/docs/typedoc"
    }
  }